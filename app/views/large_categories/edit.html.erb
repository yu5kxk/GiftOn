<div class="page-title">大カテゴリー編集</div>

<div class="center-block">
	<div class="list-edit-form">
		<table>
			<%= form_for(@large_category) do |f| %>
				<tr>
					<td class="list-edit-form-number"><%= f.text_field :number, size:'2×10' %></td>
					<td  class="list-edit-form-name"><%= f.text_field :name, size:'40' %></td>
				</tr>
				<tr>
					<td></td>
					<td class="list-edit-form-btn"><%= f.submit '変更内容を保存', class: "save-btn" %></td>
				</tr>
			<% end %>
		</table>
	</div>
</div>