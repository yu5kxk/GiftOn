<div class="page-title">カテゴリーリスト</div>

<div class="center-block">
	<div>
		<%= form_for(@large_category) do |f| %>
			<span><%= f.text_field :number, size:'2×10', placeholder: 'No.' %></span>
			<span><%= f.text_field :name, placeholder: '大カテゴリー' %><%= f.submit '追加', class: "new-btn btn-layout orange-btn" %></span>
		<% end %>
		<% @large_categories.each do |large| %>
			<table class="list-table">
				<tr class="large-title">
					<th class="large-number"><%= large.number %></th>
					<th><%= large.name %></th>
					<td class="large-btn">
						<%= link_to edit_large_category_path(large.id) do  %>
							<p class="edit-btn btn-layout">編集</p>
						<% end %>
						<%= link_to large_category_path(large.id), method: :delete, "data-confirm" => "削除してもよろしいですか？" do %>
							<p class="delete-btn btn-layout">削除</p>
						<% end %>
					</td>
					<td></td>
				</tr>
				<tr class="small-new">
					<%= form_for(@small_category) do |f| %>
					<td><%= f.hidden_field :large_category_id, :value => large.id %></td>
					<td class="small-number"><%= f.text_field :number, size:'2×10', placeholder: 'No.' %></td>
					<td><%= f.text_field :name, placeholder: '小カテゴリー' %><%= f.submit '追加', class: "new-btn btn-layout orange-btn" %></td>
					<td></td>
					<% end %>
				</tr>
				<% large.small_categories.each do |small| %>
					<tr>
						<td></td>
						<td class="small-number"><%= small.number %></td>
						<td><%= small.name %></td>
						<td>
							<%= link_to edit_small_category_path(small.id) do %>
								<p class="edit-btn btn-layout">編集</p>
							<% end %>
							<%= link_to small_category_path(small.id), method: :delete, "data-confirm" => "削除してもよろしいですか？" do %>
								<p class="delete-btn btn-layout">削除</p>
							<% end %>
						</td>
					</tr>
				<% end %>
			</table>
		<% end %>
	</div>
</div>
