<div class="page-title">大ギフトシーン編集</div>

<div class="center-block">
	<div class="list-edit-form">
		<%= form_for(@large_scene) do |flarge| %>
			<table>
				<tr>
					<td class="list-edit-form-number"><%= flarge.text_field :number, size:'2×10' %></td>
					<td><%= flarge.text_field :name, size:'40' %></td>
				</td>
				<tr>
					<td></td>
					<td class="list-edit-form-btn"><%= flarge.submit '変更内容を保存', class: "save-btn btn-layout orange-btn" %></td>
				</tr>
			</table>
		<% end %>
	</div>
</div>