<div class="page-title">ギフトシーンリスト</div>

<div class="center-block">
	<div>
		<%= form_for(@large_scene) do |f| %>
			<%= f.text_field :number, size:'2×10', placeholder: 'No.' %>
			<%= f.text_field :name, placeholder: '大ギフトシーン' %><%= f.submit '追加', class: "new-btn btn-layout orange-btn" %>
		<% end %>

		<% @large_scenes.each do |large| %>
			<table class="list-table">
				<tr class="large-title">
					<th class="large-number"><%= large.number %></th>
					<th><%= large.name %></th>
					<td class="large-btn">
						<%= link_to edit_large_scene_path(large.id) do %>
							<p class="edit-btn btn-layout">編集</p>
						<% end %>
						<%= link_to large_scene_path(large.id), method: :delete do %>
							<p class="delete-btn btn-layout">削除</p>
						<% end %>
						</td>
					<!-- 編集画面は、モーダルかアラート -->
					<td></td>
				</tr>
				<tr class="small-new">
					<%= form_for(@small_scene) do |f| %>
					<td><%= f.hidden_field :large_scene_id, :value => large.id %></td>
					<td class="small-number"><%= f.text_field :number, size:'2×10', placeholder: 'No.' %></td>
					<td><%= f.text_field :name, placeholder: '小ギフトシーン' %><%= f.submit '追加', class: "new-btn btn-layout orange-btn" %></td>
					<td></td>
					<!-- 編集画面は、モーダルかアラート -->
					<% end %>
				</tr>
				<% large.small_scenes.each do |small| %>
					<tr>
						<td></td>
						<td class="small-number"><%= small.number %></td>
						<td><%= small.name %></td>
						<td>
							<%= link_to edit_small_scene_path(small.id) do %>
								<p class="edit-btn btn-layout">編集</p>
							<% end %>
							<%= link_to small_scene_path(small.id), method: :delete do %>
								<p class="delete-btn btn-layout">削除</p>
							<% end %>
						</td>
					</tr>
				<% end %>
			</table>
		<% end %>
	</div>
</div>
